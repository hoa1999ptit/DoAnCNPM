@model IEnumerable<doan_cnpm.Models.ViewModel.CartItem>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model.Count() > 0)
{
    <div class="container rounded" style=" padding :15px;">
        <div class=" row">
            <div class=" col-12">
                <table class="table-striped border" style=" width:100%;">
                    <thead>
                        <tr class="table-info">
                            <th style="text-align:center; width:20%">

                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.FirstOrDefault().itemCart.ProductName ">Name</label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.FirstOrDefault().itemCart.Price ">Price</label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.FirstOrDefault().quantity ">Quantity</label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.FirstOrDefault().itemCart.ProductSize ">Size</label>
                            </th>
                            <th style="text-align:center;">
                                <label asp-for="@Model.FirstOrDefault().totalItem ">Total</label>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr style="padding :50px;">
                                <td style="text-align:center;">

                                    <img src="@product.itemCart.Image" width="100%" style="margin :auto; display: block ; border-radius:5px; border:1px solid #bbb9b9; " />

                                </td>
                                <td style="text-align:center;">
                                    <h6 class="text-black">@product.itemCart.ProductName</h6>
                                </td>
                                <td style="text-align:center;">
                                    @string.Format("{0:c}", product.itemCart.Price)
                                </td>
                                <td style="text-align:center;">
                                    <h6 class="text-black">@product.quantity</h6>
                                </td>
                                <td style="text-align:center;">
                                    <h6 class="text-black">@product.itemCart.ProductSize</h6>
                                </td>
                                <td style="text-align:center;">
                                    <h6 class="text-black">@product.totalItem</h6>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>

    </div>
}
