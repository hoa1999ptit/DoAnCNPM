@model doan_cnpm.Models.ViewModel.ProductViewModels
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using doan_cnpm.Extensions
<br />
<br />
<h2 class="tetx-info">Edit Product</h2>
<form method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="Products.ProductId" class="form-control" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.ProductName">Tên Sản Phẩm</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.ProductName" class="form-control" />
                </div>
                <span asp-validation-for="Products.ProductName" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Price">Giá</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Price" class="form-control" />
                </div>
                <span asp-validation-for="Products.Price" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.newPrice">Giá Sales</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.newPrice" class="form-control" />
                </div>
                <span asp-validation-for="Products.newPrice" class="text-danger"></span>
            </div>


            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Mota">Mô tả</label>
                </div>
                <div class="col-8">
                    <input asp-for="Products.Mota" class="form-control" />
                </div>
                <span asp-validation-for="Products.Mota" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes">Thể Loại</label>
                </div>
                <div class="col-8">

                    <select asp-for="@Model.Products.ProductType_Id" asp-items="Model.ProductTypes.ToSelectListItem(Model.Products.ProductType_Id)" class="form-control"></select>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Products.ProductSize">Size</label>
                </div>
                <span class="col-2"></span>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="Products.ProductSize" value="Small">Small
                    </label>
                </div>
                <span class="col-auto"></span>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="Products.ProductSize" value="Medium">Medium
                    </label>
                </div>
                <span class="col-auto"></span>
                <div class="form-check-inline">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="Products.ProductSize" value="Large">Large
                    </label>
                </div>
                <span class="col-auto"></span>
                <div class="form-check-inline disabled">
                    <label class="form-check-label">
                        <input type="radio" class="form-check-input" asp-for="Products.ProductSize" value="Extra Large">Extra Large
                    </label>
                </div>
                <span asp-validation-for="Products.ProductSize" class="text-danger"></span>

            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.isNew"></label>
                </div>
                <div class="col-1">
                    <input asp-for="Products.isNew" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Products.Image">Hình Ảnh</label>
                </div>
                <div class="col-8">
                    <input type="file" name="files" />
                </div>
            </div>
        </div>

        <div class="col-4">
            <img src="@Model.Products.Image" style="border-radius:5px;border:1px solid #bbb9b9;width:300px;height:300px" />
        </div>

        <br /> <br />
        <div class="form-group col-5">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Products.ProductId" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back To List</a>
        </div>

    </div>
   

</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



