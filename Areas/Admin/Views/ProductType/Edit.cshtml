@model doan_cnpm.Models.ProductType
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Edit Product Type</h2>
    </div>
</div>
<form method="post" asp-action="Edit">
    <div class="p-4 border rounded row">
        <input type="hidden" asp-for="ProductTypeId" class="form-control" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductTypeId">Thể Loại</label>
            </div>
            <div class="col-8">
                <input asp-for="ProductTypeName" class="form-control" />
            </div>
            <span asp-validation-for="ProductTypeName" class="text-danger"></span>
        </div>
    </div>
    <br /> <br />
    <div class="form-group col-5">
        <input type="submit" class="btn btn-primary" asp-route-id="@Model.ProductTypeId" value="Update" />
        <a asp-action="Index" class="btn btn-success">Back To List</a>
    </div>

</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



